<!-- Chimera-md v{{version}} -->
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{title}}</title>
    <link rel="stylesheet" href="/style/skeleton.css">
    <link rel="stylesheet" href="/style/chimera.css">
    <link rel="stylesheet" href="/style/site.css">
    {{{code_js}}}
  </head>
  <body>
    <nav>
      <div class="nav-overlay"></div>
      <section class="title">
        <a href="/home/">{{site_title}}</a>
      </section>
      <section class="search">
        <form action="/search" method="get" style="display: flex;flex-wrap: nowrap;">
          <!-- id for javascript, name for form submit -->
          <input id="query" name="query" type="search" placeholder="Search...">
            <label style="display: initial;">
              <input type="submit" style="display: none;"/>
              <svg class="search-icon" viewBox="0 0 20 20" width="32" height="32">
                <path d="M13 5c-3.3 0-6 2.7-6 6 0 1.4.5 2.7 1.3 3.7l-3.8 3.8 1.1 1.1 3.8-3.8c1 .8 2.3 1.3 3.7 1.3 3.3 0 6-2.7 6-6S16.3 5 13 5zm0 10.5c-2.5 0-4.5-2-4.5-4.5s2-4.5 4.5-4.5 4.5 2 4.5 4.5-2 4.5-4.5 4.5z"></path>
              </svg>
            </label>
        </form>
      </section>
    </nav>
