{{> header }}
<div class="container">
    <div class="row">
        <div class="nine columns">
            {{{body}}}
        </div>
        <div class="three columns">
            <div class="sidebar">
                <p>
                    <div class="linkbox">
                        <p>
                            <strong>Within this document:</strong>
                        </p>
                        <ul>
                        {{#each doclinks}}
                            <li><a href="#{{anchor}}">{{name}}</a></li>
                        {{/each}}
                        </ul>
                    </div>
                </p>
                <p>
                    {{#if (gt num_peers 0)}}
                    <div class="linkbox">
                        <p>
                            <strong>Other documents:</strong>
                        </p>
                        <ul>
                        {{#each peers}}
                            <li><a href="{{anchor}}">{{name}}</a></li>
                        {{/each}}
                        </ul>
                    </div>
                    {{/if}}
                </p>
            </div>
        </div>
    </div>
</div>
{{> footer }}
